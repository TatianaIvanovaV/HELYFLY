.popup
  .popup__owerlay
    .popup__window
      .popup__close
        +picture('icons', 'close')
      h3.popup__h3 Бронирование
      form.popup__form(action="" method="")
        +popupForm("Дата", "date", "date", "date")
        +popupForm("Email", "email")
        +popupForm("Имя", "name", "person-name")
        +popupForm("Фамилия","person-surname")
        +popupForm("Телефон", "tel")
        label.popup__label
          .popup__title Данные карты
              span.popup__span *
          input.popup__input.popup__input-card-num
          input.popup__input-validity 
          input.popup__input-cvv
