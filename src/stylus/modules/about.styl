.offer
  padding 70px 0 0
  display flex
  justify-content space-between
  +below(320px)
    padding 38px 0 0
    flex-direction column-reverse
  &-discription
    width 50%
    +below(320px)
      width 100%
    &__title
      margin-right 15px
      +below(320px)
        margin-right 0px
    &__h2
      font-weight 500
      font-size 40px
      line-height 49px
      margin-bottom 10px
      +below(320px)
        display none
      &--mob
        font-weight 300
        display none
        font-size 28px
        line-height 34px
        text-align center 
        margin-bottom 12px
        +below(320px)
          display block
    &__p
      font-size 18px
      line-height 26px
      +below(320px)
        font-size 14px
        line-height 20px
    &__list
      margin-top 15px
      +below(320px)
        display none
      &--mob
        display none
        +below(320px)
          margin-top 34px
          display block
    &__item   
      height 40px 
      font-weight 500
      line-height 20px
      margin-bottom 8px
      display flex
      align-items center
      +below(320px)
        height 32px
        margin-bottom 11px
        font-weight 600
        >img 
          width 35px
      >span 
        margin-left 12px
        +below(320px)
          margin-left 8px      
    &__rating 
      margin-top 26px
      border-top 0.5px solid light-grey
      border-bottom 0.5px solid light-grey 
      +below(320px)
        margin-top 25px
  &-video
    width 554px
    left 3px
    position relative
    +below(320px)
      width 290px
      left 0px
      margin-bottom 34px
    &__preview 
      position relative
      cursor pointer
      border-radius 4px
      >.preview-img
        position absolute
        top 0px 
        left 0px
        height auto
        width 100%
        z-index 2
      >.play-icon-img
        position absolute
        z-index 3
        top 322px
        right 41px
        +below(320px)
          height 17px
          width 12px
          top 161px
          right 19px
      &:hover
        >.play-icon-img
          transform scale(2.0)
          transition .5s
          transform translate(-30px, -50px) scale(5)
    &__wrap
      position relative
      padding-bottom 56.25%
      padding-top 30px
      height 0
      overflow hidden
    &__iframe
      position absolute
      top 0
      left 0
      padding 2px
      width 100%
      height 100%
      z-index 1