.offer
  padding 70px 0 0
  display flex
  
  justify-content space-between
  &-discription
    max-width 50%
    &__title
      padding-right 15px
    &__h2
      font-weight 500
      font-size 40px
      line-height 49px
      margin-bottom 10px
    &__p
      font-size 18px
      line-height 26px
      margin-bottom 20px
    &__item    
      font-weight 500
      line-height 20px
      margin 0px 0 15px
      display flex
      align-items center
      >span 
        margin-left 12px
    &__rating 
      margin-top 32px
      border-top 0.5px solid light-grey
      border-bottom 0.5px solid light-grey   
  &-video
    &__content 
      position relative
      left 4px
      >iframe
        z-index 1
    &__preview
      position relative
      cursor pointer
      z-index 2
      >.preview-img
        position absolute
        top 0
        left 0
        height 374px
        width 554px 
      >.play-icon-img
        position absolute
        top 322px
        right 40px
      &:hover
        >.play-icon-img
          transform: scale(2.0)
          transition .5s
          transform: translate(-30px, -40px) scale(3)
          