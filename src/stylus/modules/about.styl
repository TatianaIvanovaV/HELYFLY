.offer
  padding 70px 0 0
  display flex
  justify-content space-between
  @media $phone
    padding 38px 0 0
    flex-direction column-reverse
  &-discription
    width 50%
    @media screen and (min-width: 576px) and (max-width: 768px)
      width 70%
    @media $phone
      width 100%
    &__title
      margin-right 15px
      @media $phone
        margin-right 0px
    &__h2
      font-weight 500
      font-size 40px
      line-height 49px
      margin-bottom 10px
      @media $phone
        display none
      &--mob
        font-weight 300
        display none
        font-size 28px
        line-height 34px
        text-align center 
        margin-bottom 12px
        @media $phone
          display block
    &__p
      font-size 18px
      line-height 26px
      @media $phone
        font-size 14px
        line-height 20px
      @media screen and (min-width: 321px) and (max-width: 576px)
        margin-top 40px
      @media $phone-m
        margin-top 0
    &__list
      margin-top 18px
      @media $phone
        display none
      &--mob
        display none
        @media $phone
          margin-top 34px
          display block
    &__item   
      height 40px 
      font-weight 500
      line-height 20px
      margin-bottom 8px
      display flex
      align-items center
      @media $phone
        height 32px
        margin-bottom 11px
        font-weight 500
        >img 
          width 35px
      >span 
        margin-left 12px
        @media $phone-m
          margin-left 8px      
    &__rating 
      margin-top 26px
      border-top 0.5px solid light-grey
      border-bottom 0.5px solid light-grey 
      @media $phone-m
        margin-top 25px
  &-video
    width 554px
    left 3px
    position relative
    @media $phone
      width 100%
      left 0px
    @media $phone-m
      margin-bottom 34px
    &__preview 
      position relative
      cursor pointer
      border-radius 4px
      >.preview-img
        position absolute
        top 0px 
        left 0px
        height auto
        width 100%
        z-index 2
      >.play-icon-img
        position absolute
        z-index 3
        top 0px
        margin 58% 7% 0 0
        right 0px
        @media $phone-m
          height 17px
          width 12px
      &:hover
        >.play-icon-img
          transform scale(2.0)
          transition .5s
          transform translate(-30px, -50px) scale(5)
    &__wrap
      position relative
      padding-bottom 56.25%
      padding-top 30px
      height 0
      overflow hidden
    &__iframe
      position absolute
      top 0
      left 0
      padding 2px
      width 100%
      height 100%
      z-index 1