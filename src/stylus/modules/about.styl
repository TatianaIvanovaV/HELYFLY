.offer
  padding 70px 0 0
  display flex
  justify-content space-between
  &-discription
    width 50%
    &__title
      margin-right 15px
    &__h2
      font-weight 500
      font-size 40px
      line-height 49px
      margin-bottom 10px
    &__p
      font-size 18px
      line-height 26px
      margin-bottom 20px
    &__item    
      font-weight 500
      line-height 20px
      margin 0px 0 15px
      display flex
      align-items center
      >span 
        margin-left 12px
    &__rating 
      margin-top 32px
      border-top 0.5px solid light-grey
      border-bottom 0.5px solid light-grey   
  &-video
    width 554px
    left 3px
    position relative
    &__preview 
      position relative
      cursor pointer
      border-radius 4px
      >.preview-img
        position absolute
        top 0px 
        left 0px
        height auto
        width 100%
        z-index 2
      >.play-icon-img
        position absolute
        z-index 3
        top 322px
        right 41px
      &:hover
        >.play-icon-img
          transform scale(2.0)
          transition .5s
          transform translate(-30px, -50px) scale(5)
    &__wrap
      position relative
      padding-bottom 56.25%
      padding-top 30px
      height 0
      overflow hidden
    &__iframe
      position absolute
      top 0
      left 0
      padding 2px
      width 100%
      height 100%
      z-index 1