.helimain
  background url(/assets/img/main/helimain.png) center no-repeat 
  height 840px
  width 100%
  color white
  display flex
  flex-direction column
  justify-content center
  &__title
    padding-top 23px
  &__h1
    font-size 40px
    line-height 49px
  &__span 
    color orange
  &__bubble
    margin 22px 0 
.bubble
  background orange 
  border-radius 4px
  max-width 224px
  height 86px
  padding 0 23px
  position relative
  display flex
  -webkit-box-shadow 0px 4px 6px -2px rgba(0,0,0,0.28)
  -moz-box-shadow 0px 4px 6px -2px rgba(0,0,0,0.28)
  box-shadow 0px 4px 6px -2px rgba(0,0,0,0.28)
  &:after
    content: ''
    position absolute
    bottom -6px
    left 124px
    width 22px
    height 22px
    background orange
    border-radius 5px
    transform rotate(45deg)
    -webkit-box-shadow 4px 4px 5px -2px rgba(0,0,0,0.14)
    -moz-box-shadow 4px 4px 5px -2px rgba(0,0,0,0.14)
     box-shadow: 4px 4px 5px -2px rgba(0, 0, 0, 0.14)
  &__inner
    padding-top 12px
  &__coast
    font-size 20px
    padding-bottom 8px
  &__sum
    font-weight 800
    font-size 35px
  &__persent
    width 52px
    height 52px
    border 1px solid white
    border-radius 50%
    box-sizing border-box
    font-weight 800
    font-size 35px
    text-align center
    line-height 52px
    position relative
    margin 16px 0 0 6px
.booking-button
  box-shadow 0px 4px 4px rgba(255, 255, 255, 0.25), 0px 4px 70px rgba(255, 255, 255, 0.7)
  width 304px
  background none 
  height 68px
  border 3px solid white
  border-radius 3px
  color white
  font-weight 900
  font-size 18px
  text-align center
  &:hover
    cursor pointer
    color orange
    background white
    transition all 0.5s
  &:active 
    box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)
    border 3px solid orange
  &:focus 
    outline none