.helimain
  background url(/assets/img/main/helimain.png) center no-repeat 
  height 840px
  width 100%
  color white
  +below(576px)
    height 655px
  &__title
    padding-top 286px
    +below(576px)
      padding-top 142px
  &__h1
    font-size 40px
    line-height 49px
    +below(576px)
      font-size 36px
      line-height 44px  
    +below(320px)
      font-size 32px
      line-height 39px
      padding-right 15px
    >br
      +below(935px)
        display none  
  &__span 
    color orange
  &__bubble
    margin 22px 0
    background orange 
    border-radius 4px
    width 224px
    height 86px
    padding 0 23px
    position relative
    display flex
    -webkit-box-shadow 0px 4px 6px -2px rgba(0,0,0,0.28)
    -moz-box-shadow 0px 4px 6px -2px rgba(0,0,0,0.28)
    box-shadow 0px 4px 6px -2px rgba(0,0,0,0.28)
    +below(320px)
      height 78px
      width 200px
      margin 34px 0 22px
      padding 0 18px
    &:after
      content: ''
      position absolute
      bottom -6px
      left 124px
      width 22px
      height 22px
      background orange
      border-radius 5px
      transform rotate(45deg)
      -webkit-box-shadow 4px 4px 5px -2px rgba(0,0,0,0.14)
      -moz-box-shadow 4px 4px 5px -2px rgba(0,0,0,0.14)
      box-shadow: 4px 4px 5px -2px rgba(0, 0, 0, 0.14)
      +below(320px)
        left 108px
    &-inner
      padding-top 12px
      +below(320px)
        padding-top 8px
    &-coast
      font-size 20px
      padding-bottom 8px
      +below(320px)
        font-size 18px
    &-sum
      font-weight 800
      font-size 35px
      +below(320px)
        font-size 30px
    &-persent
      width 52px
      height 52px
      border 1px solid white
      border-radius 50%
      box-sizing border-box
      font-weight 800
      font-size 35px
      text-align center
      line-height 52px
      margin 16px 0 0 6px
      box-shadow 0px 4px 4px rgba(255, 255, 255, 0.25)
      +below(320px)
        width 48px
        height 48px
        line-height 46px
        font-size 30px
        margin 16px -2px 0 17px
.booking-button
  box-shadow 0px 4px 4px rgba(255, 255, 255, 0.25), 0px 4px 70px rgba(255, 255, 255, 0.7)
  width 304px
  background none 
  height 68px
  border 3px solid white
  border-radius 3px
  color white
  font-weight 900
  font-size 18px
  text-align center
  +below(576px)
    width 275px
    font-size 16px
    padding-bottom 3px
  +below(320px)
    width 100%
  &:hover
    cursor pointer
    color orange
    background white
    transition all 0.5s
  &:active 
    box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)
    border 3px solid orange
  &:focus 
    outline none