
.header-inner
    display flex
    justify-content flex-start
    flex-wrap wrap
    align-items center 
    height 100px 
    +below(320px)
        justify-content space-between
        height 60px
    &__logo
        font-size 32px
        font-weight 500
        letter-spacing -1.5px
        margin-left -3px
        +below(768px)
            font-size 28px
        +below(320px)
            font-size 22px
    &__tel
        padding-left 37px
        +below(320px)
            display none
    &__location
        display none
        +below(320px)
            display block
            color blue
            margin-right 42px
            padding-top 4px
    &__autorization
        display none
        +below(320px)
            display block
            padding-top 4px
.span-grey
    color grey