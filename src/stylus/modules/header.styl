
.header-inner
    display flex
    justify-content flex-start
    flex-wrap wrap
    align-items center 
    height 100px 
    @media $phone
        justify-content space-between
        height 60px
    &__logo
        font-size 32px
        font-weight 500
        letter-spacing -1.5px
        margin-left -3px
        @media screen and (min-width: 321px) and (max-width: 576px)
            font-size 26px
        @media $phone-m
            font-size 22px
    &__tel
        padding-left 37px
        @media $phone
            padding-left 0
        @media $phone-m
            display none
    &__location
        display none
        @media $phone-m
            display block
            color blue
            margin-right 42px
            padding-top 4px
    &__autorization
        display none
        @media $phone-m
            display block
            padding-top 4px
.span-grey
    color grey