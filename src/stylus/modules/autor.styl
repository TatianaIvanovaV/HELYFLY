.autor
  &-about
    padding 35px 0 8px
    border-bottom 1px solid light-grey
    display flex
    justify-content space-between
    &__avatar
      position relative
      display flex
      justify-content center
      width 45%
      padding 32px 0 0
      >img 
        position absolute
        top 20px
        right 22%
      >.autor-avatar
        text-align center
    &__content
      width 50%
    &__h3
      font-weight 500
      font-size 18px
      line-height 26px
    &__read
      margin 13px 0 40px
      font-size 16px
      line-height 24px
    &__p
      &--full
        display none
    &__show-more
      font-weight 500
      font-size 16px
      line-height 23px
      margin 5px 0
      >img.up
        transform rotate(180deg)
.autor-avatar
  line-height 21px
  padding-right 4px
  >img
    margin-bottom 18px
  &__name
    font-weight 500
    font-size 18px
    line-height 22px
    margin-bottom 6px
  &__range
    margin-bottom 8px
  &__span
    font-weight 500
    color blue
    cursor pointer
    &:hover
      text-decoration underline