.footer
  padding-top 75px
  +below(320px)
    display none
  &-upper
    &__main
      display flex
      justify-content space-between
    &__logo
      padding 8px 0 0 67px
    &__links
      padding-right 55px
      margin-bottom 48px
      display flex
    &__list
      display flex
    &__item
      margin-right 30px
    &__a
      >img
        vertical-align middle
    &__language
      position relative
    &__select
      cursor pointer
      border none
      width 50px 
      font-family Montserrat
      font-size 15px
      line-height 18px
      appearance none
      -moz-appearance none
      -webkit-appearance none
      &:focus 
        outline none
        box-shadow none
    &__dropdown
      pointer-events none
      position absolute
      top 0 
      right 0
  &-lower
    background #FAF9F8
    &__main
      display flex
      padding 5px 0 30px
    &__cards
      padding 6px 0 0 67px
      >img 
        margin-right 20px
    &__copyright
      color light-grey
      font-size 14px
      line-height 17px
      margin-left 257px
    &__techapp
      margin-bottom 8px
      padding-left 8px
    &__tel
      color light-grey