.popup
  &__window
    max-width 615px
    height 887px
    background white
    border-radius 6px
    padding 22px 22px
    margin 231px auto
    /*box-shadow 0px -1px 5px 6px rgba(0,0,0,0.75)*/
  &__close
    display flex
    justify-content flex-end
    cursor pointer
  &__h3
    font-weight 600
    font-size 22px
    line-height 33px
    text-align center
    margin 17px 0 25px
  &__form
    padding 0 74px
  &__title
    margin 10px 0
    font-weight 500
    font-size 16px
    line-height 20px
  &__span
    color red
  &__input
    width 420px
    height 44px
    border 1px solid light-grey
    border-radius 3px
    &-card-num
      border-bottom transparent
      margin-bottom 0
      border-radius 3px 3px 0 0
    &-validity
      border 1px solid light-grey
      border-radius 0 0 0 3px 
      height 44px
      width 210px 
      float left
    &-cvv
      border 1px solid light-grey
      border-radius 0 0 3px 0
      border-left transparent
      height 44px
      width 210px 
  &__label-agree
    display flex
    margin-top 36px
  &__check-orange 
    position relative
    top 0 
    width 16px
    height 16px
    background-color orange    
    border-radius 2px  
    margin-right 10px   
  &__p
    font-size 16px
    line-height 20px 
  &__button
    width 390px
    height 72px
    font-family Montserrat
    font-weight 600
    font-size 16px
    line-height 20px
    background orange
    border none
    border-radius 3px
    color white
    margin 21px 14px 0px
    padding-top 5px
    &:hover
      cursor pointer
    &:active 
      background white
      border 2px solid orange
      color orange
      box-shadow 0px 0px 6px rgba(252, 155, 9, 0.6)
      transition all 0.3s
    &:focus 
      outline none
input[type="checkbox"]
  display none   
  &:checked + .popup__check-orange
    box-shadow 0px 0px 3px rgba(252, 155, 9, 0.6)
    &:before
      content url("/assets/img/icons/checkbox-m.png")
      position absolute
      top -5px
      left 3px