.popup
  position relative
  +below(320px)
    display none
  &__overlay
    position fixed
    display none
    top 0
    left 0
    width 100%
    height 100vh
    background-color rgba(0,0,0,0.5)
    z-index 10
    &.active
      display block
  &__window
    display none
    position absolute
    top 231px 
    left 27%
    max-width 615px
    height 887px
    background white
    border-radius 6px
    padding 22px 22px
    z-index 12
    &.active
      display block
  &__close
    display flex
    justify-content flex-end
    &-button
      cursor pointer
      width 20px
      height 20px
  &__h3
    font-weight 600
    font-size 22px
    line-height 33px
    text-align center
    margin 17px 0 26px
  &__form
    padding 0 75px
  &__title
    margin 10px 0
    font-weight 500
    font-size 16px
    line-height 20px
  &__span
    color red
  &__input
    width 420px
    height 44px
    border 1px solid light-grey
    border-radius 3px
    padding 0 14px 0 20px 
    &-card-num
      border-bottom transparent
      margin-bottom 0
      border-radius 3px 3px 0 0
    &-validity, &-cvv
      padding 0 20px
      border 1px solid light-grey
      height 44px
      width 210px  
    &-validity
      float left
      border-radius 0 0 0 3px 
    &-cvv
      border-radius 0 0 3px 0
      border-left transparent 
  &__label-agree
    display flex
    margin 36px 0 0 2px
  &__check-orange 
    position relative
    top 0 
    width 16px
    height 16px
    background-color orange    
    border-radius 2px  
    margin-right 10px   
  &__p
    font-size 16px
    line-height 20px 
  &__submit
    width 390px
    height 72px
    font-family Montserrat
    font-weight 600
    font-size 16px
    line-height 20px
    background orange
    border none
    border-radius 3px
    color white
    margin 21px 15px 0px
    padding-top 5px
    &:hover
      cursor pointer
    &:active 
      background white
      border 2px solid orange
      color orange
      box-shadow 0px 0px 6px rgba(252, 155, 9, 0.6)
      transition all 0.3s
    &:focus 
      outline none
input
  &[type="checkbox"]
    display none   
    &:checked + .popup__check-orange
      box-shadow 0px 0px 3px rgba(252, 155, 9, 0.6)
      &:before
        content url("/assets/img/icons/checkbox-m.png")
        position absolute
        top -5px
        left 3px
  &[type="date"]
    &::-webkit-calendar-picker-indicator 
      color rgba(0, 0, 0, 0)
      opacity 1
      display block
      background url("/assets/img/icons/calendar2.png")
      width 21px
      height 23px   
  &[placeholder]
    light-grey
    font-family Montserrat
    font-size 16px
    line-height 20px