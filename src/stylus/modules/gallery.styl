.gallery
  &__content
    padding-top 29px
    +below(320px)
      padding-top 60px
  &__h3
    font-weight 500
    font-size 20px
    line-height 29px 
    margin-bottom 34px
    +below(320px)
      font-weight normal
      font-size 28px
      line-height 34px
      margin-bottom 0px
      text-align center
      padding 0 10px
  &__group
    &-inner
      display flex
      flex-wrap wrap
      justify-content center
      margin 0 -5px 0 -5px
  &__item 
    max-width 277px
    margin 0 5px 3px 5px
    &:nth-child(n+9)
      display none
  &__show
    font-weight 500
    font-size 17px
    line-height 25px
    display flex
    justify-content center
    border-bottom 1px solid light-grey
    padding 30px 0 22px
  &__inner
    margin-right 12px
    >img.up 
      transform rotate(180deg)