.gallery
  &__content
    padding-top 29px
  &__h3
    font-weight 500
    font-size 20px
    line-height 29px 
    margin-bottom 34px
  &__group
    display flex
    flex-wrap wrap
    justify-content center
    margin 0 -5px 0 -5px
  &__item 
    max-width 277px
    margin 0 5px 3px 5px
    &:nth-child(n+9)
      display none
  &__show
    display flex
    justify-content center
    border-bottom 1px solid light-grey
    padding 30px 0 22px
  &__inner
    margin-right 12px
    >img.up 
      transform rotate(180deg)
  &__span
    margin 0 10px
.expand    
  display block !important
