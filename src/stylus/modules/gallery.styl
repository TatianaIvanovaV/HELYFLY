
.gallery
  &__content
    padding 28px 0 0 3px
    +below(320px)
      padding 60px 0 0
      margin-bottom 2px
  &__for-desk
    +below(320px)
      display none
  &__for-mobile
    display none
    +below(320px)
      display block
  &__h3
    font-weight 500
    font-size 20px
    line-height 29px 
    margin-bottom 35px
    +below(320px)
      font-weight normal
      font-size 28px
      line-height 34px
      margin-bottom 30px
      text-align center
      padding 0 10px
  &__group
      display flex
      flex-wrap wrap
      justify-content center
      margin 0 -5px 0 -5px
  &__item 
    margin 0 5px 3px 5px
    +below(1140px)
      &:nth-child(n+7)
        display none
    +below(881px)
      &:nth-child(n+5)
        display none
    &:nth-child(n+9)
      display none
    >img 
      width 100%
      height auto
  &__show
    font-weight 500
    font-size 17px
    line-height 25px
    display flex
    justify-content center
    border-bottom 1px solid light-grey
    padding 31px 0 23px
    +below(320px)
      display none
    &-more-inner
      margin-right 12px
      >img.up 
        transform rotate(180deg)