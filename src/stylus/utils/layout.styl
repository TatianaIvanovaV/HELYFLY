
@import "utils/reset.styl"
@import "utils/fonts.styl"
@import "utils/vars.styl"

*,
*::before,
*::after 
  box-sizing border-box
html
  box-sizing border-box
  font-size 14px
body
  font-family 'Montserrat', sans-serif
  color black
  background white
  line-height 24px
  font-weight 400
.container
  width 100%
  margin 0 auto
  max-width 1140px
ul, li 
  list-style none
a
  text-decoration none
  color black
.chat-img
  height auto
  width 30px
.many-reviews 
  font-size 18px
  display flex
  justify-content flex-start
  align-items center
  min-height 87px 
  &__high-rating
    margin 0 15px 0 12px
.open-scr
  color blue
  cursor pointer
  &:hover
    text-decoration: underline 
.arrow-img 
  margin 0 10px
.expand
  display block !important  
.autor-avatar
  line-height 21px
  padding-right 4px
  >img
    margin-bottom 18px
  &__name
    font-weight 500
    font-size 18px
    line-height 22px
    margin-bottom 6px
  &__range
    margin-bottom 8px
  &__span
    font-weight 500
    color blue