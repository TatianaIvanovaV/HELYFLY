
@import "utils/reset.styl"
@import "utils/fonts.styl"
@import "utils/vars.styl"

*,
*::before,
*::after 
  box-sizing inherit
html
  box-sizing border-box
  font-size 14px
body
  font-family 'Montserrat', sans-serif
  color black
  background #fff
  line-height 24px
  font-weight 400
.container 
  margin 0 auto
  max-width 1140px
ul, li 
  list-style none
a
  text-decoration none
  color black