
@import "utils/reset.styl"
@import "utils/fonts.styl"
@import "utils/vars.styl"
@import "utils/media.styl"


*,
*::before,
*::after 
  box-sizing border-box
html
  box-sizing border-box
  font-size 14px
body
  font-family 'Montserrat', sans-serif
  color black
  background white
  line-height 24px
  font-weight 400
.container
  width 100%
  margin 0 auto
  max-width 1140px
  +below(1140px)
    padding 0 15px
ul, li 
  list-style none
a
  text-decoration none
  color black
.chat-img
  height auto
  width 30px
.many-reviews 
  font-size 18px
  display flex
  justify-content flex-start
  align-items center
  height 87px 
  +below(320px)
    height 69px
    font-size 14px
  >.cup-img 
    padding 0 0px 9px 2px
  &__inner
    display flex
    justify-content flex-start
    align-items center
    +below(992px)
      flex-direction column
      align-items flex-start
      margin 0 0 0 10px
      padding 0 0 10px
      +below(320px)
        margin 0 0 0 14px
        padding 0px
  &__span
    margin 0 15px 0 10px
    +below(992px)
      margin 0
    +below(320px)
      margin -4px 0 4px 
  >.stars-group-img
    +below(992px)
      margin 0
    +below(320px)
      margin 0 /*3px 0 0 48px*/
.open-scr
  color blue
  cursor pointer
  &:hover
    text-decoration: underline 
.arrow-img 
  margin 0 10px
.expand
  display block !important 
.d-none 
  +below(320px)
    display none
.d-block
  display none
  +below(320px)
    display block
.bold
  font-weight bold
  +below(320px)
    font-weight normal